<div class="container show-article-container">
  <h1 class='show-article-title'><%= @article.title %></h1>
  <hr class="my-4">
  <% if @article.picture.attached?  %>
    <img class='show-article-pic' src="<%=(url_for(@article.picture))%>" class="card-img-top" alt="...">
    <hr class="my-4">
  <% end  %>
  <p class='show-article-body'><%= @article.body %></p>
  <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-primary' %>
  <%= link_to "Destroy", article_path(@article), class: 'btn btn-danger' , data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
</div>

<div class="container comment-container">
  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
  
  <h2>Comments</h2>
  <%= render @article.comments %>
</div>
